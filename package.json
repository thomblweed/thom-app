{
  "name": "thom-app",
  "version": "0.0.1",
  "description": "app for demoing tech learnings",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "test": "jest",
    "deps:up": "docker compose up -d",
    "deps:down": "docker compose down --rmi local",
    "build": "npm run clean && webpack --mode production",
    "clean": "if [ -d dist ]; then rm -r dist; fi",
    "compile": "tsc",
    "lint": "eslint --ignore-pattern webpack* --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "https://thomblweed@dev.azure.com/thomblweed/thom/_git/thom-app"
  },
  "author": "Thomas Newman",
  "license": "ISC",
  "types": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jestSetup.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/jest/styleMock.ts"
    }
  },
  "dependencies": {
    "axios": "^0.23.0",
    "history": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.17.4",
    "react-router-dom": "^6.0.0-beta.4",
    "thom-components": "^0.0.27"
  },
  "devDependencies": {
    "@babel/core": "^7.15.8",
    "@babel/plugin-transform-runtime": "^7.15.8",
    "@babel/preset-env": "^7.15.8",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^12.1.2",
    "@testing-library/user-event": "^13.4.1",
    "@types/jest": "^27.0.2",
    "@types/node": "^16.11.1",
    "@types/react": "^17.0.30",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.4.0",
    "eslint": "^8.0.1",
    "eslint-plugin-react": "^7.26.1",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-testing-library": "^4.12.4",
    "html-webpack-plugin": "^5.4.0",
    "jest": "^27.3.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "style-loader": "^3.3.0",
    "terser-webpack-plugin": "^5.2.4",
    "ts-loader": "^9.2.6",
    "typescript": "^4.4.4",
    "webpack": "^5.58.2",
    "webpack-cli": "^4.9.0",
    "webpack-dev-server": "^4.3.1"
  }
}
