{
  "name": "thom-app",
  "version": "0.0.1",
  "description": "app for demoing tech learnings",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "webpack serve --config ./webpack/webpack.config.cjs --mode development",
    "build:dev": "webpack --config ./webpack/webpack.config.cjs --mode development",
    "test": "jest",
    "deps:up": "docker compose up -d",
    "deps:down": "docker compose down --rmi local",
    "deps:restart": "npm run deps:down && npm run deps:up",
    "clean": "scripts/clean.sh",
    "compile": "tsc",
    "lint": "eslint --ignore-pattern esbuild* --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://thomblweed@dev.azure.com/thomblweed/thom/_git/thom-app"
  },
  "author": "Thomas Newman",
  "license": "ISC",
  "types": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jestSetup.ts"
    ],
    "moduleNameMapper": {
      "\\.(scss)$": "<rootDir>/jest/styleMock.ts"
    }
  },
  "dependencies": {
    "axios": "^0.26.0",
    "history": "^5.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^7.27.1",
    "react-router-dom": "^6.2.1",
    "thom-components": "^0.0.31"
  },
  "devDependencies": {
    "@babel/core": "^7.17.5",
    "@babel/plugin-transform-runtime": "^7.17.0",
    "@babel/preset-env": "^7.16.11",
    "@babel/preset-react": "^7.16.7",
    "@babel/preset-typescript": "^7.16.7",
    "@testing-library/jest-dom": "^5.16.2",
    "@testing-library/react": "^12.1.3",
    "@testing-library/user-event": "^13.5.0",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.21",
    "@types/react": "^17.0.39",
    "@types/react-dom": "^17.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "babel-loader": "^8.2.3",
    "css-loader": "^6.6.0",
    "esbuild": "^0.14.23",
    "esbuild-loader": "^2.18.0",
    "esbuild-sass-plugin": "^2.2.3",
    "eslint": "8.9.0",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-testing-library": "^5.0.5",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^7.0.4",
    "jest": "^27.5.1",
    "sass": "^1.49.9",
    "sass-loader": "^12.6.0",
    "style-loader": "^3.3.1",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "webpack-dev-server": "^4.7.4"
  }
}
