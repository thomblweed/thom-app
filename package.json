{
  "name": "thom-app",
  "version": "0.0.1",
  "description": "app for demoing tech learnings",
  "main": "index.js",
  "scripts": {
    "dev": "webpack serve --mode development",
    "test:unit": "jest",
    "test:acceptance": "testcafe chrome,firefox tests/fixtures/",
    "test:acceptance:headless": "testcafe chrome:headless,firefox:headless tests/fixtures/",
    "bdd": "npx cucumber-js",
    "bdd:full": "npm run deps:up && npm run bdd && npm run deps:down",
    "deps:up": "docker compose up -d",
    "deps:down": "docker compose down --rmi local",
    "build": "npm run clean && webpack --mode production",
    "clean": "if [ -d dist ]; then rm -r dist; fi",
    "compile": "tsc",
    "lint": "eslint --ignore-pattern webpack* --ignore-path .gitignore ."
  },
  "repository": {
    "type": "git",
    "url": "https://thomblweed@dev.azure.com/thomblweed/thom/_git/thom-app"
  },
  "author": "Thomas Newman",
  "license": "ISC",
  "types": "dist/index.d.ts",
  "jest": {
    "testEnvironment": "jsdom",
    "setupFilesAfterEnv": [
      "<rootDir>/jest/jestSetup.ts"
    ],
    "moduleNameMapper": {
      "\\.(css|less)$": "<rootDir>/jest/styleMock.ts"
    }
  },
  "dependencies": {
    "axios": "^0.21.4",
    "history": "^5.0.1",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-hook-form": "^6.15.8",
    "react-router-dom": "^6.0.0-beta.4",
    "thom-components": "0.0.15"
  },
  "devDependencies": {
    "@babel/core": "^7.15.5",
    "@babel/plugin-transform-runtime": "^7.15.0",
    "@babel/preset-env": "^7.15.6",
    "@babel/preset-react": "^7.14.5",
    "@babel/preset-typescript": "^7.15.0",
    "@cucumber/cucumber": "^7.3.1",
    "@testing-library/jest-dom": "^5.14.1",
    "@testing-library/react": "^11.2.7",
    "@testing-library/user-event": "^13.2.1",
    "@types/jest": "^26.0.24",
    "@types/node": "^14.17.17",
    "@types/react": "^17.0.21",
    "@types/react-dom": "^17.0.9",
    "@typescript-eslint/eslint-plugin": "^4.31.1",
    "@typescript-eslint/parser": "^4.31.1",
    "babel-loader": "^8.2.2",
    "css-loader": "^6.3.0",
    "eslint": "^7.32.0",
    "eslint-plugin-react": "^7.25.3",
    "eslint-plugin-react-hooks": "^4.2.0",
    "html-webpack-plugin": "^5.3.2",
    "jest": "^27.2.0",
    "optimize-css-assets-webpack-plugin": "^6.0.1",
    "style-loader": "^3.2.1",
    "terser-webpack-plugin": "^5.2.4",
    "testcafe": "^1.16.0",
    "ts-loader": "^8.3.0",
    "typescript": "^4.4.3",
    "webpack": "^5.53.0",
    "webpack-cli": "^4.8.0",
    "webpack-dev-server": "^3.11.2"
  }
}
