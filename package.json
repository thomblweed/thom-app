{
  "name": "thom-app",
  "version": "0.0.2",
  "description": "app for demoing tech learnings",
  "private": true,
  "scripts": {
    "dev": "run-p dev:*",
    "dev:app": "webpack serve --config ./webpack/webpack.dev.cjs",
    "dev:css": "tailwind ./src/index.css -o ./src/tailwind.css --watch",
    "build": "pnpm run clean && webpack --config ./webpack/webpack.prod.cjs",
    "build:dev": "webpack --config ./webpack/webpack.dev.cjs",
    "test": "jest",
    "deps:up": "docker compose up -d",
    "deps:down": "docker compose down --rmi local",
    "deps:restart": "pnpm run deps:down && pnpm run deps:up",
    "clean": "scripts/clean.sh",
    "compile": "tsc",
    "lint": "eslint --ignore-path .gitignore .",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/thomblweed/thom-app"
  },
  "author": "Thomas Newman",
  "license": "ISC",
  "types": "dist/index.d.ts",
  "dependencies": {
    "@tanstack/react-query": "^4.0.10",
    "axios": "^0.27.2",
    "history": "^5.3.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-hook-form": "^7.33.1",
    "react-router-dom": "^6.3.0",
    "thom-components": "^0.1.1"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.2",
    "@testing-library/jest-dom": "^5.16.4",
    "@testing-library/react": "^13.3.0",
    "@testing-library/user-event": "^14.3.0",
    "@types/jest": "^28.1.6",
    "@types/node": "^18.0.6",
    "@types/react": "^18.0.15",
    "@types/react-dom": "^18.0.6",
    "@types/testing-library__jest-dom": "^5.14.5",
    "@typescript-eslint/eslint-plugin": "^5.30.7",
    "@typescript-eslint/parser": "^5.30.7",
    "babel-loader": "^8.2.5",
    "css-loader": "^6.7.1",
    "esbuild-loader": "^2.19.0",
    "eslint": "8.20.0",
    "eslint-plugin-react": "^7.30.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-testing-library": "^5.5.1",
    "html-webpack-plugin": "^5.5.0",
    "husky": "^8.0.1",
    "jest": "^28.1.3",
    "jest-environment-jsdom": "^28.1.3",
    "npm-run-all": "^4.1.5",
    "style-loader": "^3.3.1",
    "tailwindcss": "^3.1.6",
    "ts-jest": "^28.0.7",
    "typescript": "^4.7.4",
    "webpack": "^5.73.0",
    "webpack-bundle-analyzer": "^4.5.0",
    "webpack-cli": "^4.10.0",
    "webpack-dev-server": "^4.9.3",
    "webpack-merge": "^5.8.0"
  }
}
