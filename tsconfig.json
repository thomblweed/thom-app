{
  "compilerOptions": {
    "jsx": "react",
    "module": "ESNext",
    "lib": ["ES6", "DOM"],
    "emitDeclarationOnly": true,
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "moduleResolution": "node",
    "types": ["node", "vitest/globals"],
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "allowJs": true,
    "paths": {
      "~/*": ["./src/*"]
    }
  },
  "include": ["./src"],
  "exclude": ["node_modules", "dist", "jest", "history"]
}
